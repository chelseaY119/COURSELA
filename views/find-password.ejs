<%- include("templates/header-beforeLogin") %>

<main class="form-wrapper find-password">
    <form action="/find-password" method="post" class="needs-validation" novalidate>
        <h1 class="h3 fw-normal">Find Password</h1>

        <div class="form-floating">
            <input name="email" type="email" class="form-control" id="email" placeholder="Email address" required>
            <label for="email">Email address</label>
            <div class="invalid-feedback">
                Please enter a valid email address.
            </div>
        </div>

        <div class="sign-btns-container">
            <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
        </div>
    </form>
</main>

<%- include("templates/footer") %>
