<% if (isLoggedIn) { %>
    <%- include("templates/header") %>
<% } else { %>
    <%- include("templates/header-beforeLogin") %>
<% } %>
<div class="form-wrapper signin">
    <div class="container">
        <div class="form-signup w-100 m-auto">
            <form action='/signup-submit' method='post' class="needs-validation" novalidate>
                <h1 class="h3 fw-normal">Create user</h1>

                <div class="form-floating">
                    <input name="id" type="text" class="form-control" id="floatingInput" placeholder="ID" required>
                    <label for="floatingInput">ID</label>
                    <div class="invalid-feedback">
                        Please enter an id.
                    </div>
                </div>

                <div class="form-floating">
                    <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                    <div class="invalid-feedback">
                        Please enter an email address.
                    </div>
                </div>

                <div class="form-floating">
                    <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                </div>

                <div class="form-floating">
                    <input name="username" type="text" class="form-control" id="floatingInput" placeholder="Username" required>
                    <label for="floatingInput">Username</label>
                    <div class="invalid-feedback">
                        Please enter a username.
                    </div>
                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</main>
<%- include("templates/footer") %>