<%- include("templates/header") %>
<div class="px-4 text-center">
    <div class="col-lg-6 mx-auto">
        <a class="btn btn-main-login btn-lg px-4" href="#">Login</a>
        <a class="btn btn-primary btn-lg px-4" href="#">Sign up</a>
        <div class="col-lg-6 mx-auto p-2">
            <img class="w-100" src="/image/coursla_main.png" alt=""/>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-8">
              <form action="/searchSubmit" method="post" class="form-inline my-2 my-lg-0 d-flex justify-content-center">
                <div class="form-group mx-2 mb-2" style="width:300px;">
                    <input name="courseSearch" type="text" class="form-control" id="courseSearch" placeholder="Search courses">
                </div>
                <button type="submit" class="btn btn-main-search mb-2">Search</button>
              </form>
            </div>
        </div>
        <div class="col-lg-6 mx-auto p-3">
            <h1 class="display-5 fw-bold text-body-emphasis">Join the Coursla Family</h1>
            <p>Love Coursla? Let's make it official.</p>
            <img style="width: 300px" src="/image/angry.jpg" alt=""/>
        </div>
        <div class="col-lg-6 mx-auto p-4">
            <a class="btn btn-primary btn-lg px-4 gap-3" style="width: 250px;" href="#">Sign up now!</a>
        </div>
    </div>
</div>
<%- include("templates/footer") %>