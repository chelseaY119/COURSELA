<%- include("templates/header") %>
<div class="form-wrapper signin">
    <div class="container">
      <main class="form-signin w-100 m-auto">
          <form action='/change-password-submit' method='post' class="needs-validation" novalidate>
              <h1 class="h3 fw-normal">Change Password</h1>

              <div class="form-floating">
                  <input name="password1" type="password" class="form-control" id="floating-password1" placeholder="Password" required>
                  <label for="floating-password">Password</label>
                  <div class="invalid-feedback">
                      Please enter a password
                  </div>
              </div>

              <div class="form-floating">
                  <input name="password2" type="password" class="form-control" id="floating-password2" placeholder="Confirm Password" required>
                  <label for="floating-password2">Confirm Password</label>
                  <div class="invalid-feedback">
                      Please confirm your password
                  </div>
              </div>

              <div class="sign-btns-container">
                <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
              </div>
          </form>
      </main>
  </div>
</div>

