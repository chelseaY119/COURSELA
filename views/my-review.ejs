<% if (isLoggedIn) { %>
    <%- include("templates/header") %>
<% } else { %>
    <%- include("templates/header-beforeLogin") %>
<% } %>
<link rel="stylesheet" href="/css/read-my-review-card.css">

<div class="my-reviews-title">My Reviews</div>
<% if (reviewSliderPairs.length > 0) { %>
    <% reviewSliderPairs.forEach(pair=> { %>
        <%- include("read-my-review", { review: pair.review, sliderValue: pair.sliderValue, username: pair.user.username,
          courseId: pair.review.CourseID, avatar: pair.avatar, imgNum: pair.courseImageNum, title: pair.courseTitle, myReviewPage: myReviewPage, email: email }) %>
    <% }) %>
<% } else { %>
        <div class="message-my-review"><p>You have no reviews yet.</p></div>
<% } %>



<%- include("templates/footer") %>
