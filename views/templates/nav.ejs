</nav>
<script>
  /**
   * Function to show the menu by displaying the navigation links.
   * @author Riz Nur Saidy
   */
  function showMenu() {
    var navLinks = document.getElementById("navlinks");
    navLinks.style.display = "inline-block";
  }

  /**
   * Function to hide the menu by hiding the navigation links.
   * @author Riz Nur Saidy
   */
  function hideMenu() {
    var navLinks = document.getElementById("navlinks");
    navLinks.style.display = "none";
  }

  /**
   * Function to handle the window resize event.
   * Checks the window width and shows or hides the navigation links accordingly.
   * @author Riz Nur Saidy
   */
  function handleResize() {
    var windowWidth = window.innerWidth || document.documentElement.clientWidth;

    // Check if the window width is above 830px
    if (windowWidth > 830) {
      // Show the navigation links
      showMenu();
    } else {
      // Hide the navigation links
      hideMenu();
    }
  }

  // Event listener for the window resize event
  window.addEventListener("resize", handleResize);

  // Initial check when the page loads
  handleResize();

</script>

