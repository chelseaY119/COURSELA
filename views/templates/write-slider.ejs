<link rel="stylesheet" href="/css/slider.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<% if (editReview) {%>

    <div class="slider" name="<%= type %>">
        <div class="slider-box slider-box-1 <% if (value  >= 1) { %>active<% } %>"></div>
        <div class="slider-box slider-box-2 <% if (value >= 2) { %>active<% } %>"></div>
        <div class="slider-box slider-box-3 <% if (value >= 3) { %>active<% } %>"></div>
        <div class="slider-box slider-box-4 <% if (value  >= 4) { %>active<% } %>"></div>
        <div class="slider-box slider-box-5 <% if (value  >= 5) { %>active<% } %>"></div>
        <input type="hidden" name="<%= type %>SliderValue" value="<%= value%>" />

    </div>

    <% } else {%>
        <div class="slider" name="<%= type %>">
            <div class="slider-box slider-box-1"></div>
            <div class="slider-box slider-box-2"></div>
            <div class="slider-box slider-box-3"></div>
            <div class="slider-box slider-box-4"></div>
            <div class="slider-box slider-box-5"></div>
            <input type="hidden" name="<%= type %>SliderValue" value="">

        </div>

        <% } %>

            <script>
                $(document).ready(function () {
                    $('.slider').each(function () {
                        var sliderValueInput = $(this).find('input[type="hidden"]');
                        var defaultValue = 3;

                        // Check if the slider value is empty
                        if (sliderValueInput.val() === '') {
                            sliderValueInput.val(defaultValue);
                        }
                    });
                });

            </script>