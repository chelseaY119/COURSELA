<a class="CourseCard-Container" href="/course-details?courseId=<%= result.courseDetails._id.toString() %>">
    <div class="CourseCard-StyledCourseCard">
        <div class="Card-CourseName"><%= result.courseDetails.Title %></div>

        <div class="card-thumbnail">

            <img src="/image/randomimage/<%= result.courseDetails.imageNum %>.jpeg"
                 alt="Image <%= result.courseDetails.imageNum %>">
            <div class="logo-provider">
                <% if (result.courseDetails.Provider?.toLowerCase() == 'udemy' ) { %>
                    <img src="/image/logo-round-udemy.webp" alt="Udemy">
                <% } %>
                <% if (result.courseDetails.Provider?.toLowerCase() == 'coursera' ) { %>
                    <img src="/image/logo-round-coursera.png" alt="Coursera">
                <% } %>
            </div>

        </div>
        <div class="card-info">
            <div class="Card-CourseProvider">Provider: <%= result.courseDetails.Provider %></div>
            <div class="Card-CourseRating">Course Rating: <%= parseInt(result.courseDetails.Course_Rating) > 0 ? parseFloat(result.courseDetails.Course_Rating).toFixed(1) : "N/A" %></div>
            <div class="Card-CourseRating">Coursla
                Rating: <%= parseInt(result.courseDetails.CourslaRating) > 0 ? parseFloat(result.courseDetails.CourslaRating).toFixed(1) : "N/A" %></div>
            <div class="Card-CourseDifficulty">Level: <%= result.courseDetails.Course_Difficulty %></div>

        </div>

        <% if (isLoggedIn) { %>
            <% const bookmarkedCourseIds = userBookmarks.map(b => b.courseId); %>
            <button class="Course-Bookmark <%= bookmarkedCourseIds.includes(result.courseDetails._id.toString()) ? 'bookmarked' : '' %>"
                type="button" data-course-id="<%= result.courseDetails._id %>"
                onclick="toggleBookmark(event,'<%= result.courseDetails._id %>')">
            <% } else { %>
            <button class="Course-Bookmark" type="button" data-course-id="<%= result.courseDetails._id %>"
                    onclick="toggleBookmark(event,'<%= result.courseDetails._id %>')">
                <% } %>
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                     class="bi bi-heart-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                </svg>
            </button>
    </div>
</a>